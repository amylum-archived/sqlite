    url_xpath
    url 'http://www.sqlite.org/download.html'
    xpath '/html/body/table/tr[2]/td[4]'
    regex /^.*an amalgamation, version ([\d.]+)\..*$/
  end

  actual do
    git_tag
    regex /^(.*)-\d+$/
